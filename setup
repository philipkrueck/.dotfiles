#!/bin/bash

set pipefail -eou

XDG_CONFIG_HOME="$HOME/.config"

if ! command -v chezmoi >/dev/null; then
  sh -c "$(curl -fsLS get.chezmoi.io)" -- init --apply git@github.com:philipkrueck/.dotfiles.git
fi

